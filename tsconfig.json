{
  "compilerOptions": { 
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    // "module": "esnext",
    "target": "es6",
    // "target": "es5",
    "jsx": "react"
    // "jsx": "preserve",
  },
  "include": [
    "src",
    "slides",
    "typings"
  ]
}
